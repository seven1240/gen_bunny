% -*- mode: erlang -*-
{deps, [{meck, ".*",
         {git, "git://github.com/esl/meck.git", "master"}},
        {amqp_client, ".*",
         {git, "git://github.com/mochi/amqp_client.git", "master"}},
        {rabbit_common, ".*",
         {git, "git://github.com/mochi/rabbit_common.git", "master"}}]}.
{cover_enabled, true}.
{erl_opts, [debug_info]}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
